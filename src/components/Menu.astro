---
 const currentPath = Astro.url.pathname

const pages = [
    {
        name: "Home",
        path: "/"
    },
    {
        name: "Getting started",
        path: "/getting-started"
    },
    {
        name: "Documentation",
        path: "/documentation"
    },
    {
        name: "Contributing",
        path: "/contributing"
    },
    {
        name: "GitHub",
        path: "https://github.com/Giuliano1993/serverMan"
    }
];
---
<nav class="flex justify-between px-4 py-4 shadow-md shadow-purple-400 mb-5 fixed top-0 left-0 w-screen bg-purple-950">
    <h1 class="text-yellow-400 text-xl font-bold font-mono">
        <a href="/ "class="">ServerMAN</a>
    </h1>
    <ul class="flex content-around text-purple-400 font-medium text-lg gap-5">
        { pages.map((page) => <li><a class=`${ page.path === currentPath ? "underline decoration-yellow-200 pb-3 underline-offset-8" : "" }` href=`${page.path}`>{page.name}</a></li>)}
    </ul>
</nav>
